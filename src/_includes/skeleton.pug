doctype html
html(lang='en')

    block vars

    head

        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(charset='utf-8')
        meta(name='viewport',content='width=device-width, initial-scale=1, minimum-scale=1')
        meta(name='author', content='Lynn Fisher')

        title !{title}
            if bodyClass !== 'landing'
                = ' Nestflix'
        meta(name='description', content=description)

        link(rel='shortcut icon', href='/img/_icons/favicon.png')
        link(rel='stylesheet', type='text/css', href='/css/main.css')

        meta(content='@lynnandtonic', name='twitter:site')
        meta(content='@lynnandtonic', name='twitter:creator')
        if bodyClass == 'landing'
            meta(content='Nestflix', name='twitter:title', property='og:title')
        else
            meta(content=title + ' â€” Nestflix', name='twitter:title', property='og:title')
        //- TODO: maybe a better description for the actual page
        meta(content=description, name='twitter:description', property='og:description')
        meta(name='twitter:card', content='summary_large_image')
        meta(property='og:type',  content='website')
        if bodyClass == 'landing'
            meta(content='https://nestflix.fun', property='og:url')
            meta(content='https://nestflix.fun', property='twitter:url')
        else if bodyClass == 'detail'
            meta(content='https://nestflix.fun/' + slug, property='og:url')
            meta(content='https://nestflix.fun/' + slug, property='twitter:url')
        else
            meta(content='https://nestflix.fun/' + path, property='og:url')
            meta(content='https://nestflix.fun/' + path, property='twitter:url')
        if bodyClass == 'detail'
            meta(content='https://nestflix.fun/img/' + slug + '-thumb-1200w.jpg', property='og:image')
            meta(content='https://nestflix.fun/img/' + slug + '-thumb-1200w.jpg', name='twitter:image')
        else
            meta(content='https://nestflix.fun/img/nestflix-thumb-1200w.jpg', property='og:image')
            meta(content='https://nestflix.fun/img/nestflix-thumb-1200w.jpg', name='twitter:image')
        meta(property='og:image:width', content='1200')
        meta(property='og:image:height', content='630')

    body(class=bodyClass)
        a.skip-link(href='#content') Skip to content

        header
            nav
                a.nav-home(href='/')
                    img(src='/img/_logos/logo-nestflix.svg' alt='Nestflix')
                a(href='/#categories') Browse
                a(href='/search') Search
                a(href='/contribute') Contribute
                a.nav-user(href='/user')
                    img(src='/img/_icons/icon-user.svg' alt='user icon')

        main
            block content

        footer
            nav
                a.nav-home(href='/')
                    img(src='/img/_logos/logo-nestflix.svg' alt='Nestflix')
                a(href='/#categories') Browse
                a(href='/search') Search
                a(href='/contribute') Contribute
            div
                p Nestflix is not affiliated with Netflix or any other streaming service or film studio.
                p This website is AI-free.
                p Made with love by #[a(href='https://lynnandtonic.com') Lynn Fisher].<br/>Big thanks to Jason Rose.
                p.coffee #[span Like this site?]
                 a(href='https://www.buymeacoffee.com/lynnandtonic') Buy me a coffee

        if bodyClass == 'landing' || 'category'
            include feature-js
        script(data-goatcounter='https://nestflix.goatcounter.com/count'
            async src='//gc.zgo.at/count.js')
