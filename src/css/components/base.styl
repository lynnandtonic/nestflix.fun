/*--------------------------------------------------------------------
* $BASE
--------------------------------------------------------------------*/

*, *:before, *:after
  box-sizing: border-box

::selection
  background: $gold
  color: black
  text-shadow: none

body
  min-height: 100vh
  height: 100%
  display: flex
  flex-direction: column
  font-family: 'Inter', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
  font-weight: $font-weight-light
  line-height: 1.4
  color: $white
  background-color: #1a1b23
  @media screen and (max-width: 320px)
    font-size: 100%
  @media screen and (min-width: 321px)
    font-size: 112.5%

main
  flex: 1 0 auto
  min-height: auto
  position: relative

.visually-hidden,
.screenreader
  height: 1px
  width: 1px
  position: absolute
  display: block
  overflow: hidden
  clip: rect(1px 1px 1px 1px)
  clip: rect(1px, 1px, 1px, 1px)
  clip-path: inset(1px)
  white-space: nowrap

img
  max-width: 100%
  height: auto

//-----------------------------
// helpers

.center
  text-align: center

.hidden
  display: none

.mb0
  margin-bottom: 0

.mb1
  margin-bottom: .5em
