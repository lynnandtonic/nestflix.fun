/*--------------------------------------------------------------------
* $NAV
--------------------------------------------------------------------*/

.skip-link
  padding: .7em 1em
  position: fixed
  left: 1em
  top: 1em
  background-color: $gold
  border-radius: 3px
  clip: rect(0 0 0 0)
  z-index: 20
  color: $grey-drk
  text-transform: uppercase
  font-size: 70%
  font-weight: $font-weight-medium

  &:focus
    clip: unset

.detail header
  @media screen and (max-width: $bp-md)
    background-image: linear-gradient(to bottom, black(.8) 10%,
                                                 black(.4) 60%,
                                                 black(0) 100%)
  @media screen and (min-width: $bp-md + 1)
    background-image: linear-gradient(to bottom, black(.4) 30%, black(0))

.landing header
  @media screen and (max-width: $bp-md)
    background-image: linear-gradient(to bottom, black(.7) 40%, black(0))
  @media screen and (min-width: $bp-md + 1)
    background-image: linear-gradient(to bottom, black(.6) 40%,
                                                 black(.1) 85%,
                                                 black(0) 100%)

header
  width: 100%
  position: absolute
  padding: 1em var(--body-padding)
  z-index: 10

  @media screen and (max-width: $bp-md)
    padding-bottom: 2em

  nav
    display: flex
    align-items: center
    gap: 1.2em
    font-size: 90%

    a
      color: white

  .nav-user
    margin-left: auto
    
    img
      filter: drop-shadow(0 2px 2px black(.4))

  .nav-home
    display: flex
    align-items: center
    @media screen and (max-width: $bp-md)
      max-width: 100px
    @media screen and (min-width: $bp-md + 1)
      max-width: 140px
